{
  "extends": "@gplane/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "preserve",
    "moduleResolution": "bundler"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
